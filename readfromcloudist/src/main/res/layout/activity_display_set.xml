<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mree.cloud.music.player.app.act.DisplaySetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/black_border" android:orientation="horizontal">

        <Switch
            android:id="@+id/swShowSuitable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="@string/show_suitable_songs_msg"
            android:textAlignment="center"
            android:textSize="25sp"/>
    </LinearLayout>
</RelativeLayout>
