<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ads="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ozelPrimary"
            android:gravity="center"
            android:text="OPTIONS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_id">
        </com.google.android.gms.ads.AdView>

        <LinearLayout
            android:id="@+id/addToPlaylist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_height"
            android:background="@drawable/black_border"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/settings_height"
                android:layout_height="@dimen/settings_height"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_playlist_add"/>

            <TextView
                android:id="@+id/addToPlaylistBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add to playlist"
                android:textAlignment="textStart"
                android:textAppearance="@style/Ozel.ActionBar"
                android:textSize="25sp"
                android:typeface="sans"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goToArtist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_height"
            android:background="@drawable/black_border"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/settings_height"
                android:layout_height="@dimen/settings_height"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_artist_black"/>

            <TextView
                android:id="@+id/tvGoToArtist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Go to artist"
                android:textAlignment="textStart"
                android:textAppearance="@style/Ozel.ActionBar"
                android:textSize="25sp"
                android:typeface="sans"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goToAlbum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_height"
            android:background="@drawable/black_border"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/settings_height"
                android:layout_height="@dimen/settings_height"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_album_black"/>

            <TextView
                android:id="@+id/tvGoToAlbum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Go to album"
                android:textAlignment="textStart"
                android:textAppearance="@style/Ozel.ActionBar"
                android:textSize="25sp"
                android:typeface="sans"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/downloadLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_height"
            android:background="@drawable/black_border"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDownload"
                android:layout_width="@dimen/settings_height"
                android:layout_height="@dimen/settings_height"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_download_dark"/>

            <TextView
                android:id="@+id/tvDownload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/download_opt"
                android:textAlignment="textStart"
                android:textAppearance="@style/Ozel.ActionBar"
                android:textSize="25sp"
                android:typeface="sans"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>