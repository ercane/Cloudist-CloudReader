<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_player_setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="mree.cloud.music.player.app.act.PlayerSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/black_border" android:orientation="horizontal">

        <Switch
            android:id="@+id/swPlayLocal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="@string/local_storage_include"
            android:textAlignment="center"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1" android:background="@drawable/black_border"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/equalizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/equalizer" android:textAlignment="center"
            android:textColor="@android:color/black" android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>
